@model IEnumerable<proyectoFinal.Models.mascota>

@{
    ViewBag.Title = "Index";
}

<h2>Control de mascotas</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <label>Propietario </label>
        </th>
        <th>
            <label>Especie </label>
        </th>
        <th>
            <label>Nombre </label>
        </th>
        <th>
            <label>Peso </label>
        </th>
        <th>
            <label>Sexo </label>
        </th>
        <th>
            <label>Fecha de nacimiento </label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.propietario_Mascota.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipo_mascota.especie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.peso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sexo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechanacimiento)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.codmascota }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.codmascota }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.codmascota })
        </td>
    </tr>
}

</table>
